<div class="container">
  <h1 class="display-4">Edit your Account:</h1>
</div>
<hr>
<%if @errors%>
  <div class="alert alert-danger alert-dismissable" role="alert">
    <%=@errors%>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </div>
<%end%>
<div class="container">
  <form method="POST" action="/users/<%=@user.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="username">Username:</label>
      <input id="username" type="text" class="form-control" name="user[username]" value="<%=@user.username%>">
    </div>
    <div class="form-group">
      <label for="old_password">Old Password:</label>
      <input id="old_password" type="password" class="form-control" name="old_password">
    </div>
    <div class="form-group">
      <label for="password">New Password:</label>
      <input id="password" type="password" class="form-control" name="user[password]">
    </div>
    <div class="form-group">
      <label for="password">Verify New Password:</label>
      <input id="password" type="password" class="form-control" name="user[password_confirmation]">
    </div>
    <div class="d-flex justify-content-end">
      <div class="form-group">
        <button class="btn btn-primary" id="Submit" type="submit">Submit</button>
        <a class="btn btn-primary" role="button" href="/users/<%=@user.id%>">Back</a>
      </div>
    </div>
  </form>
  <form method="POST" action="/users/<%=@user.id%>/delete">
    <input type="hidden" name="_method" value="delete">
    <button class="btn btn-block btn-danger" id="Delete User" type="submit">Delete Account</button>
  </form>
</div>