<div class="container">
  <h1 class="display-4"><%=@user.username%> </h1>
</div>
<%if @success%>
  <div class="container lead">
    <h3><<%=@success%></h3>
  </div>
<%end%>
<div class="container lead">
  <br>
  <table class="table">
    <thead class="thead">
      <th scope="col">Recipes:</th>
    </thead>
    <tbody>
      <%@user.recipes.each do |recipe|%>
        <td><a href="/recipes/<%=recipe.slug%>"><%=recipe.name%></a> </td>
      <%end%>
    </tbody>
  </table>
  <div class="d-flex justify-content-end">
    <a href="/recipes/new" role="button" class="btn btn-primary m-1">Add a New Recipe</a>
  </div>
</div>
<div class="container lead">
  <br>
  <table class="table">
    <thead class="thead">
      <th scope="col">Ingredients:</th>
    </thead>
    <tbody>
    <%@user.ingredients.each do |ingredient|%>
      <tr><td><a href="/ingredients/<%=ingredient.slug%>"><%=ingredient.name%></a></td></tr>
    <%end%>
    </tbody>
  <table>
  <div class="d-flex justify-content-end">
    <a href="/ingredients/new" role="button" class="btn btn-primary m-1">Add a New Ingredient</a>
  </div>
  <div class="form-group d-flex justify-content-end">
    <form method="GET" action="/users/<%=@user.id%>/edit">
      <button id="edit" class="btn btn-primary m-1" type="submit">Edit User Info</button>
    </form>
  </div>
</div>
