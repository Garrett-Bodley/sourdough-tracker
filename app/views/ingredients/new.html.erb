<div class="container">
  <h1 class="display-4">Create a new Ingredient:</h1>
</div>
<hr>
<div class="container">
  <form method="POST" action="/ingredients">
    <div class="form-group">
      <label for="name">Name:</label>
      <input id="name" class="form-control" type="text" name="ingredient[name]">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" class="form-control" type="textarea" name="ingredient[description]"></textarea>
    </div>

    <h3>Select recipes where this ingredient is used:</h3>
    <p>
    <%@recipes.each do |recipe|%>
      <div class="form-check form-check-inline">
        <input type="checkbox" id=<%=recipe.id%>  class="form-check-input" value=<%=recipe.id%> name="ingredient[recipe_ids][]"> 
        <label class="form-check-label" for=<%=recipe.id%>> <%=recipe.name%></label>
      </div>
    <%end%>
    </p>
    <button id="make ingredient" class="btn btn-primary" type="submit">Make Ingredient</button>
  </form>
</div>
