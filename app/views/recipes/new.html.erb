<div class="container">
  <h1 class="display-4">Create a new Recipe:</h1>
</div>
<hr>
<div class="container">
  <form method="POST" action="/recipes">
    <input id="hidden" type="hidden" name="recipe[user_id]" value=<%=@user.id%>>
    <div class="form-group">
      <label for="name">Name:</label>
      <input id="name" class="form-control" type="text" name="recipe[name]">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" class="form-control" type="textarea" name="recipe[description]"></textarea>
    </div>
    
    <h4>Select Ingredients used in this recipe:</h4>
    <p>
      <%@ingredients.each do |ingredient|%>
        <input type="checkbox" id=<%=ingredient.id%> value=<%=ingredient.id%> name="recipe[ingredient_ids][]"> 
        <label class="form-check-label" for=<%=ingredient.id%>><%=ingredient.name%></label>
      <%end%>
    </p>

    <button id="create recipe" class="btn btn-primary" type="submit">Create Recipe</button>
    <a class="btn btn-primary" role="button" href='/ingredients/new'>Create a New Ingredient</a>
  </form>
</div>
