<div class="container">
  <h1 class="display-4">Edit <%=@recipe.name%></h1>
</div>
<hr>
<div class="container">
  <form method="POST" action="/recipes/<%=@recipe.slug%>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input id="hidden" type="hidden" name="recipe[user_id]" value=<%=@user.id%>>
    <div class="form-group">
      <label for="name">Name:</label>
      <input id="name" class="form-control" type="text" name="recipe[name]" value="<%=@recipe.name%>">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" class="form-control" type="textarea" name="recipe[description]"><%=@recipe.description%></textarea>
    </div>
    <%if @ingredients.count > 0%>
      <h4>Select Ingredients:</h4>
      <%@ingredients.each do |ingredient|%>
        <div class="form-check">
          <input type="checkbox" id=<%=ingredient.id%>  class="form-check-input" value=<%=ingredient.id%> <%='checked' if @recipe.ingredients.include?(ingredient) %> name="recipe[ingredient_ids]][]">
          <label class="form-check-label" for=<%=ingredient.id%>> <%=ingredient.name%></label>
        </div>
      <%end%>
    <%end%>
    <div class="d-flex justify-content-end">
      <button id="edit recipe" class="btn btn-primary" type="submit">Edit Recipe</button>
    </div>
  </form>
</div>
